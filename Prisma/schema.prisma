generator client {
    provider             = "prisma-client-py"
    recursive_type_depth = 5
}

datasource db {
    provider = "postgresql"
    url      = env("DB_URL")
}

model Ubication {
    cod_ubi Int      @id @map("cod_ubi")
    country String   @map("country") @db.VarChar(100)
    Images  Images[]
    User    User[]

    @@map("ubication")
}

model State {
    cod_state Int    @id @map("cod_state")
    state     String @map("state") @db.VarChar(8)
    User      User[]

    @@map("state")
}

model ImgDescription {
    cod_description Int           @id
    description     String        @map("description") @db.VarChar(8)
    User_Dates      User_Dates[]

    @@map("img_description")
}

model Dates {
    cod_date Int      @id
    year     Int      @map("year")
    month    Int      @map("month")
    day      DateTime @map("day")

    @@map("dates")
}

model Images {
    cod_image Int       @id @default(autoincrement())
    cod_ubi   Int
    ubication Ubication @relation(fields: [cod_ubi], references: [cod_ubi])
    image     Bytes     @map("image")

    @@map("images")
}

model User {
    cod_user  Int       @id @default(autoincrement())
    cod_ubi   Int
    cod_state Int
    username  String    @map("username") @db.VarChar(15)
    email     String    @map("email") @db.VarChar(50)
    password  String    @map("password") @db.VarChar(300)
    ubication Ubication @relation(fields: [cod_ubi], references: [cod_ubi])
    state     State     @relation(fields: [cod_state], references: [cod_state])

    @@map("user")
}

model User_Dates {
    cod_date        Int
    cod_user        Int
    cod_description Int
    description     ImgDescription @relation(fields: [cod_description], references: [cod_description])

    @@id([cod_date, cod_user, cod_description])
    @@map("user_dates")
}

model User_Images {
    cod_image                     Int
    cod_user                      Int
    description                   String

    @@id([cod_image, cod_user])
    @@map("user_images")
}
